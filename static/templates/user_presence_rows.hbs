{{! User presence rows }}
{{#if users_title}}
    <h5 id="users_heading" class="buddy_list_heading {{#if users_title_collapsed}} collapsed {{/if}}" role="button" data-toggle="collapse" data-target="#users" aria-controls="users" aria-expanded="true"><i class="fa fa-chevron-down" aria-hidden="true"></i> {{ users_title }}</h5>
    <div class="collapse {{#unless users_title_collapsed}} in {{/unless}}" id="users">
        {{#each users}}
        {{> user_presence_row}}
        {{/each}}
    </div>
{{else}}
    {{#each users}}
    {{> user_presence_row}}
    {{/each}}
{{/if}}

{{#if others_title}}
{{! other presence rows }}
<h5 id="others_heading" class="buddy_list_heading {{#if others_title_collapsed}} collapsed {{/if}}" role="button" data-toggle="collapse" data-target="#others" aria-controls="others" aria-expanded="true"><i class="fa fa-chevron-down" aria-hidden="true"></i> {{ others_title }}</h5>
<div class="collapse {{#unless others_title_collapsed}} in {{/unless}}" id="others">
    {{#each others}}
    {{> user_presence_row}}
    {{/each}}
</div>
{{/if}}
